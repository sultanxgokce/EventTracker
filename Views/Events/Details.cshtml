@model EventTracker.Models.EventModel

@{
    ViewData["Title"] = "Etkinlik Detayları";
}

<h2>Etkinlik Detayları</h2>


<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-text"><strong>Açıklama:</strong>@Model.Description</p>
        <p class="card-text"><strong>Tarih: </strong>@Model.Date.ToString("f")</p>
        <a asp-action="Index" class="=btn btn-secondary">Geri Dön</a>
    </div>
</div>